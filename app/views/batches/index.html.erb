<%= render 'shared/searchbar' %>
<h1>Toutes les cuv√©es</h1>
<div class="container">
    <% @batches.each do |batch| %>
      <%= link_to batch_path(batch), :action => 'go' do %>
        <div class="card-item">
              <img src='<%= batch.photo.attached? ? cl_image_path(batch.photo.key, width: 150, height: 150, crop: :fill) : image_path("https://m.media-amazon.com/images/I/81lHQGmXtIL._AC_UL1500_.jpg", width: 150, height: 150, crop: :fill) %>' />
            <div class="card-infos">
              <h3><%= batch.name%> <%= batch.year %></h3>
              <p><%= batch.domain.name %></p>
            </div>
            <div class="card-details">
              <h3>Price: <%= batch.initial_price%></h3>
              <p>Stock: <%= batch.quantity%></p>
            </div>
            <h3><div class="card-potential"></h3>
              <%= batch.potential%>
            </div>
        <% end %>
      <% end %>
    </div>
