<div class="navbar navbar-expand-sm navbar-light navbar-lewagon" data-controller="hide-search" data-action="scroll@window->hide-search#hideScroll">
  <div class="container-fluid search">
    <%= form_tag batches_path, method: :get do %>
      <div class="search-bar">
        <div style="margin-right: 4px">
          <%= text_field_tag :query,
            params[:query],
            class: "form-control",
            placeholder: "Un domaine, une cuvÃ©e..."
          %>
        </div>
        <div>
          <%= button_tag type: 'submit', class: "btn btn-dark btn-search", id: "register-button" do %>
            <i class='fa-solid fa-magnifying-glass'></i>
          <% end %>
        </div>
      </div>
    <% end %>
    <div class="log">
      <% if user_signed_in? %>
        <div class="">
          <%= link_to destroy_user_session_path, method: :delete, class: "nav-link blacktext" do %>
            <%= image_tag "avatar.webp", class: "avatar"%>
          <% end %>
        </div>
      <% else %>
        <li class="nav-link">
          <%= link_to "Login", new_user_session_path, class: "nav-link" %>
        </li>
      <% end %>
    </div>
  </div>
</div>
